<%- include('../partials/header') %>

<h2>Flight List</h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Flight Number</th>
      <th>Airport</th>
      <th>Departure Date</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(f) { %>
        <tr>
            <td><%= f.airline %></td>
            <td><%= f.flightNo %></td>
            <td><%= f.airport %></td>
            <td><%= f.departs.toLocaleString() %></td>
            <td><a href="/flights/<%= f._id %>">Details</a></td>
        </tr>
     <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>